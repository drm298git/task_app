<header>
    <h1>Ruby on Rails スケジュール管理アプリ</h1>
</header>

<div class="main_container">
    <div class="information">
        <h2>スケジュール詳細</h2>
    </div>

    <table>
        <tbody>
            <tr>
                <th>タイトル</th>
                <td><%= @post.title %></td>
            </tr>
            <tr>
                <th>開始日</th>
                <td><%= @post.start_at.to_s(:datetime_jp) %></td>
            </tr>
            <tr>
                <th>投稿日時</th>
                <td><%= @post.created_at.to_s(:datetime_jp) %></td>
            </tr>
            <tr>
                <th>終日</th>
                <td><%= @post.all_day ? "◯" : "" %></td>
            </tr>
            <tr>
                <th>スケジュールメモ</th>
                <td><%= @post.memo %></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <%= link_to "スケジュール一覧に戻る",:posts %>
        </li>
        <li>
            <%= link_to "スケジュールを編集する",:edit_post %>
        </li>
        <li>
            <%= link_to "スケジュールを削除する", @post, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </li>
    </ul>
</div>

<footer>
    <h1>現在の日時:<%= Time.current.strftime('%Y年 %m月 %d日') %></h1>
</footer>
