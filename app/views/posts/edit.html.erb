<header>
  <h1>Ruby on Rails スケジュール管理アプリ</h1>
</header>

<div class="information">
  <h2>スケジュール編集</h2>
</div>

<%= form_with model: @post do |f| %>

<table>

  <tr>
    <th><%= f.label :title, "タイトル" %></th>
    <td><%= f.text_field :title %></td>
  </tr>

  <tr>
    <th><%= f.label :start_at, "開始日" %></th>
    <td><%= f.datetime_field :start_at, class: 'form-control' %></td>
  </tr>

  <tr>
    <th><%= f.label :end_at, "終了日" %></th>
    <td><%= f.datetime_field :end_at, class: 'form-control' %></td>
  </tr>

  <tr>
    <th><%= f.label :all_day, "終日" %></th>
    <td><%= f.check_box :all_day, id: :all_day, :as => :boolean %>終日の場合はチェックを入れます</td>
  </tr>

  <tr>
    <th><%= f.label :memo, "スケジュールメモ" %></th>
    <td><%= f.text_field :memo %></td>
  </tr>

</table>

  <div>
    <ul>
      <li><%= f.submit "スケジュールの編集を完了する"%></li>
      <li><%= link_to "スケジュール一覧に戻る", :posts %></li>
    </ul>
  </div>

<% end %>

<footer>
  <h1>現在の日時:<%= Time.current.strftime('%Y年 %m月 %d日') %></h1>
</footer>